<component name="envelopes" type="synapse/template">
    <subComponents>
        <component name="getEnvelope">
            <file>getEnvelope.xml</file>
            <description>Retrieves the overall status for the specified envelope.</description>
        </component>
        <component name="createEnvelopeFromDocument">
            <file>createEnvelopeFromDocument.xml</file>
            <description>Create and send an envelope with documents, recipients, tabs.</description>
        </component>
        <component name="createEnvelopeFromTemplate">
            <file>createEnvelopeFromTemplate.xml</file>
            <description>Create and send an envelope from a template.</description>
        </component>
        <component name="createEnvelope">
            <file>createEnvelope.xml</file>
            <description>Create and send an envelope from a combination of documents and templates.</description>
        </component>
        <component name="sendDraftEnvelope">
            <file>sendDraftEnvelope.xml</file>
            <description>Send draft envelope.</description>
        </component>
    </subComponents>
</component>


